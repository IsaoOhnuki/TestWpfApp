<UserControl x:Class="ObjectAreaLibrary.ContentsArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjectAreaLibrary"
             mc:Ignorable="d" 
             d:DesignWidth="200" d:DesignHeight="120">
    <Border x:Name="Border">
        <Canvas x:Name="contentsCanvas"
                Background="White"
                PreviewMouseMove="contentsCanvas_PreviewMouseMove"
                PreviewMouseDown="contentsCanvas_PreviewMouseDown"
                PreviewMouseUp="contentsCanvas_PreviewMouseUp"/>
    </Border>
</UserControl>
